<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="SherlockBot_xacro">
<!-- Gazebo Implementation-->
  <!--<xacro:include filename="$(find robot_urdf)/urdf/robot.gazebo"/>-->
<!-- Colors-->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.80078125 0.12890625 0.1328125 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
<!-- Geometry -->
  <xacro:macro name="cylinder_geometry" params="l r">
    <geometry>
      <cylinder length="${l}" radius="${r}"/>
    </geometry>
  </xacro:macro>

<!-- Inertia-->
  <xacro:macro name="inertia" params="mass">
    <inertial>
      <mass value="${mass}"/>
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
    </inertial>
  </xacro:macro>

<!-- Wheels Macro-->
  <xacro:macro name="wheel" params="prefix x y z">
    <link name="${prefix}_wheel_link">
      <xacro:inertia mass="0.2"/>
      <collision>
        <origin rpy="0 1.5707 1.5707" xyz="${x} ${y} ${z}"/>
        <xacro:cylinder_geometry r="0.1" l="0.04"/>
      </collision>
      <visual>
        <origin rpy="0 1.5707 1.5707" xyz="${x} ${y} ${z}"/>
        <xacro:cylinder_geometry  l="0.04" r="0.1"/>
        <material name="red"/>
      </visual>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <origin rpy="0 0 0" xyz="${x} ${y} ${z}"/>
      <child link="${prefix}_wheel_link"/>
      <parent link="body"/>
      <axis rpy="0 0 0" xyz="0 1 0"/>
      <limit effort="10000" velocity="1000"/>
      <joint_properties damping="1.0" friction="1.0"/>
    </joint>
  </xacro:macro>
<!-- Dummy link and joint-->
<!-- <link name="dummy">

  </link>
  
  <joint name="dummy_to_body" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <child link="body"/>
    <parent link="dummy"/>
  </joint> -->
<!-- Body Configuration -->
  <link name="body">
    <!-- pose and inertial -->
    
    <inertial>
      <mass value="5"/>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
    </inertial>
    <!-- body -->
    <collision name="collision_body">
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.3 0.07"/>
      </geometry>
      <material name="black"/>
    </visual>
    <!-- caster front -->
    <collision name="caster_front_collision">
      <origin rpy=" 0 0 0" xyz="0.35 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    <visual name="caster_front_visual">
      <origin rpy=" 0 0 0" xyz="0.2 0 -0.05"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </visual>
  </link>

<!-- Wheels configuration -->
  <xacro:wheel prefix="back_right" x="-0.15" y="0.15" z="0"/>
  <xacro:wheel prefix="back_left" x="-0.15" y="-0.15" z="0"/>
  <xacro:wheel prefix="front_right" x="0.15" y="0.15" z="0"/>
  <xacro:wheel prefix="front_left" x="0.15" y="-0.15" z="0"/>

<!-- Laser -->
  <link name="laser_link">
	  <collision>
	    <origin xyz="0 0 0.025" rpy="0 0 0"/>
	    <geometry>
		    <box size="0.05 0.05 0.05"/>
	    </geometry>
	  </collision>
	  <visual>
	    <origin xyz="0 0 0.025" rpy="0 0 0"/>
	    <geometry>
		    <box size="0.05 0.05 0.05"/>
	    </geometry>
	    <material name="red">
		    <color rgba="1 0 0 1"/>
	    </material>
	  </visual>
	  <inertial>
	    <mass value="1e-5" />
	    <origin xyz="0 0 0" rpy="0 0 0"/>
	    <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
	  </inertial> 
  </link>

  <joint name="laser_joint" type="fixed">
	  <axis xyz="0 1 0" />
	  <origin xyz="0.23 0 0.0" rpy="0 0 0"/>
	  <parent link="body"/>
	  <child link="laser_link"/> 
	</joint> 

<!-- Arm -->     

  <joint name="body_to_arm1" type="continuous">
    <origin rpy="0 0 0" xyz="-0.15 0 0"/>
    <child link="arm1"/>
    <parent link="body"/>
    <axis xyz="0 0 1"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <link name="arm1">
    <xacro:inertia mass="0.5"/>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <xacro:cylinder_geometry l="0.2" r="0.05"/>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <xacro:cylinder_geometry l="0.2" r="0.05"/>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="arm1_to_grip" type="revolute">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <child link="grip"/>
    <parent link="arm1"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" lower="0" upper="3.1416" velocity="0.5"/>
  </joint>

  <link name="grip">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
      <material name="blue"/>   
    </visual>
    <inertial>
      <mass value="1e-5"/>
	    <origin xyz="0 0 0" rpy="0 0 0"/>
	    <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
	  </inertial>
  </link>

</robot>


        